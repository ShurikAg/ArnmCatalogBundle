{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% block title %}
	{{ parent() }} | Catalog Categories Admin
{% endblock %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'catalog.categories.info'|trans({}, 'catalog')|raw }}
	</div>
{% endblock %}
 
{% block content %}
	<div class="page-header">
		<h2>{{ 'catalog.categories.list.title'|trans({}, 'catalog') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	<table class="table table-hover">
	    <thead>
	        <tr>
	            <th>#</th>
	            <th>{{ 'catalog.categories.list.table.head.name'|trans({}, 'catalog') }}</th>
	            <th>{{ 'catalog.categories.list.table.head.slug'|trans({}, 'catalog') }}</th>
	            <th>{{ 'catalog.categories.list.table.head.active'|trans({}, 'catalog') }}</th>
	            <th>{{ 'default.label.actions'|trans }}</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td>{{ entity.id }}</td>
	            <td>{{ entity.name }}</td>
	            <td>{{ entity.slug }}</td>
	            <td>
	            	{% if entity.active %}
	            		<span class="glyphicon glyphicon-ok"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove"></span>
	            	{% endif %}
            	</td>
	            <td>
	            	<a href="{{ path('arnm_catalog_category_edit', { 'id': entity.id }) }}" class="btn btn-default">{{ 'default.label.edit'|trans }}</a>
	            	<a href="{{ path('arnm_catalog_category_delete', { 'id': entity.id }) }}" class="btn btn-danger delete-confirm">{{ 'default.label.delete'|trans }}</a>
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
	
	<div class="well">
	    <a href="{{ path('arnm_catalog_category_new') }}" class="btn btn-primary">
	        {{ 'catalog.categories.list.action.create_new'|trans({}, 'catalog') }}
	    </a>
    </div>
{% endblock %}
